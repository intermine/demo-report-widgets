table
    width: 100%

div[data-view="tags"]
    ul
        list-style-type: none
        margin: 0

        li
            cursor: pointer

            span.color
                width: 12px
                height: 12px
                border-radius: 50%
                display: block
                float: left
                margin: 5px 5px 0 0

            &:not(.active)
                span.color:after
                    content: ""
                    width: 8px
                    height: 8px
                    border-radius: 50%
                    display: block
                    background: #FFF
                    margin: 2px